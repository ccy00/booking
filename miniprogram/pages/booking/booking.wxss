/* pages/booking/booking.wxss */
page{

  padding-bottom: 110rpx;
}
swiper
{
  height: 380rpx;
}
.goodsImg
{
  width: 100%;
  max-height: 100%;
}

.time
{
  display: flex;
  box-sizing: border-box;
  width: 100%;
  justify-content: center;
  align-items: center;
  margin-top: 5rpx;
  font-size: 26rpx;
  color: rgb(255, 123, 0);
  color: var(--themeColors);
  background-color: #FFFBE8;
  background-color: var(--bgColor);
  
}
.timeText
{
  margin-right: 20rpx;
  margin-left: 10rpx;
}
.van-count-down
{
  color: var(--themeColors)!important;
  font-size: 13px!important;
}
.bookingBigBox
{
  margin-top: 10rpx;
  width: 100%;
  height: 120rpx;
  color: var(--themeColors);
  background-color: var(--bgColor);
  display: flex;
  justify-content:space-between;
  align-items: center;
  box-shadow: 0 1px 6px 0 #f1f8e9;

}
.priceBox,.nameBox
{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
 
}
.nameBox
{

  text-align: left;
  flex: 1;
  margin-left: 20rpx;
}
.priceBox
{
  padding-left:10rpx;
  width: 25vw;
  border-right: 1px dashed var(--themeColors);
  align-items: center;
  margin-right:10rpx;
}
.nowPrice
{
  display: inline-block;
  color: red;
  font-size: 13px;
  margin-right: 20rpx;
 
}

.oldPrice
{
  font-size: 10px;
  text-decoration: line-through;
}

.bookingText
{
  font-size: 14px;
  font-weight: bold;
  letter-spacing: 2px;
  margin-bottom: 5rpx;
}
.name
{
  font-size: 13px;
  font-weight: bold;
  width: 98%;

}

.numBox
{
  width: 140rpx;
  text-align: center;
  height: 80rpx;
  line-height: 80rpx;
  color: white;
  background-color: rgb(255, 115, 0);
  background-color: #4caf50;
  border-bottom-right-radius: 30px;
  border-top-right-radius: 30px;
  position: absolute;
  top: 50rpx;
  left: 0rpx;
}

.goodsDetails image
{
  display: block;
  margin:0 auto;
}

.detailsText
{
  text-align: center;
   padding-top: 40rpx;
  
}
.rulesBox
{
  padding: 0 60rpx;
}

.rules
{
  margin-bottom: 20rpx;
  color: #bab8b8;
  z-index: 2em;
 
}

.footerBox
{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100rpx;
  background-color: var(--bgColor);
  box-shadow: 0 1px 6px 0 rgba(32, 33, 36, .28);
  display: flex;
  justify-content: space-around;
  align-items: center;
  color:var(--themeColors);
  font-size: 14px;
}

.shareIcon
{
  width: 40rpx;
  height: 40rpx;
  vertical-align: text-bottom;
  margin-right: 5rpx;
}
#shareButton
{
  width: 30vw;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: var(--bgColor);
  border: none;
  border-right: 1px dashed var(--themeColors);
  color:var(--themeColors);
  font-size: 13px;
}
#booking,#hasBeenSchedul
{
  font-size: 14px;
  width: 200rpx;
  height: 70rpx;
  line-height: 70rpx;
  background-color: red;
  color: white;
  border-radius: 30px;
  margin-right: 50rpx;
}

#hasBeenSchedul
{
  background-color: #e0e0e0d2;
  color: #9e9e9e;
  text-align: center;
}